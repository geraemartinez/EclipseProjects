package ctc.traccar.business.implementations;

import java.util.Set;
import org.apache.log4j.Logger;
import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Service;

import ctc.traccar.business.helpers.UserHelper;
import ctc.traccar.business.interfaces.UserServiceInt;
import ctc.traccar.data.entities.User;
import ctc.traccar.data.interfaces.UserRepositoryInt;
import ctc.traccar.models.vo.GeofenceVo;
import ctc.traccar.models.vo.ReportVo;
import ctc.traccar.models.vo.UserSettingVo;
import ctc.traccar.models.vo.UserVo;

@Service
public class UserService extends BaseService<Object> implements UserServiceInt{
	
	private static Logger logger = Logger.getLogger(UserService.class);
	
	@Autowired
	UserRepositoryInt userRepo;

	@Override
	public UserVo getById(UserVo user) {

		try {
			
			if(user!=null && user.getId()!=null){
				
				User userToSearch = UserHelper.converToObj(user);
				userToSearch = userRepo.getById(userToSearch);
				return UserHelper.converToVO(userToSearch);
				
			}else{
				
				return null;
			}
			
		}catch(Exception e){ 
			logger.error("[ERROR] Uncaught Exception - the following error ocurred at UserService getById: " + e.getMessage());
			return null;
		}
	}

	@Override
	public UserVo getByEmail(UserVo user) {
		try {
			
			if(user!=null && user.getEmail()!=null){
				
				User userToSearch = UserHelper.converToObj(user);
				userToSearch = userRepo.getByEmail(userToSearch);
				return UserHelper.converToVO(userToSearch);
				
			}else{
				
				return null;
			}
			
		}catch(Exception e){ 
			logger.error("[ERROR] Uncaught Exception - the following error ocurred at UserService getByEmail() method : " + e.getMessage());
			return null;
		}
	}

	@Override
	public Set<UserVo> getAll() {
		try {
			
						
		}catch(Exception e){ 
			logger.error("[ERROR] Uncaught Exception - the following error ocurred at UserService getByEmail() method : " + e.getMessage());
			return null;
		}
	}

	@Override
	public Set<ReportVo> getReports(UserVo user) {
		// TODO Auto-generated method stub
		return null;
	}

	@Override
	public Set<GeofenceVo> getGeofences(UserVo user) {
		// TODO Auto-generated method stub
		return null;
	}

	@Override
	public UserSettingVo getUserSetting(UserVo user) {
		// TODO Auto-generated method stub
		return null;
	}

	

}
